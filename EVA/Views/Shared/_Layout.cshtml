
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="author" content="templatemo">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700;900&display=swap" rel="stylesheet">

    <title>EVA</title>

	<link href="/assets/css/animate.css" rel="stylesheet" />
	<link href="/assets/css/flex-slider.css" rel="stylesheet" />
	<link href="/assets/css/fontawesome.css" rel="stylesheet" />
	<link href="/assets/css/owl.css" rel="stylesheet" />
	<link href="/assets/css/templatemo-liberty-market.css" rel="stylesheet" />
    <link rel="icon" type="/image/png" sizes="16x16" href="/favicon-16x16.png">
	
  
	<script src="/assets/js/custom.js"></script>
	<script src="/assets/js/isotope.js"></script>
	<script src="/assets/js/isotope.min.js"></script>
	<script src="/assets/js/owl-carousel.js"></script>
	<script src="/assets/js/popup.js"></script>
	<script src="/assets/js/tabs.js"></script>

   


    <!-- Bootstrap core CSS -->
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Additional CSS Files -->
    <link rel="stylesheet" href="/assets/css/fontawesome.css">
    <link rel="stylesheet" href="/assets/css/templatemo-liberty-market.css">
    <link rel="stylesheet" href="/assets/css/owl.css">
    <link rel="stylesheet" href="/assets/css/animate.css">
    <link rel="stylesheet" href="https://unpkg.com/swiper@7/swiper-bundle.min.css" />
</head>
<body>
<!-- ***** Preloader Start ***** -->
    <div id="js-preloader" class="js-preloader">
        <div class="preloader-inner">
            <span class="dot"></span>
            <div class="dots">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
    </div>
    <!-- ***** Preloader End ***** -->
    <!-- ***** Header Area Start ***** -->
    <header class="header-area header-sticky">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav class="main-nav">
                        <!-- ***** Logo Start ***** -->
                        <a href="/index" class="logo">
                            <img src="/assets/images/Eva logo.png" alt="pic">
                        </a>
                        <!-- ***** Logo End ***** -->
                        <!-- ***** Menu Start ***** -->
                       <ul class="nav">
                            <li><a href="/" class="@(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">Home</a></li>
                            <li><a href="/planets" class="@(ViewContext.RouteData.Values["Action"]?.ToString() == "Planets" ? "active" : "")">Planets</a></li>
                            <li><a href="/galaxies" class="@(ViewContext.RouteData.Values["Action"]?.ToString() == "Galaxies" ? "active" : "")">Galaxies</a></li>
                            <li><a href="/astronauts" class="@(ViewContext.RouteData.Values["Action"]?.ToString() == "Astronauts" ? "active" : "")">Astronauts</a></li>
                            <li><a href="/apod" class="@(ViewContext.RouteData.Values["Action"]?.ToString() == "Apod" ? "active" : "")">Apod</a></li>
                            <li><a href="/aboutus" class="@(ViewContext.RouteData.Values["Action"]?.ToString() == "Aboutus" ? "active" : "")">About us</a></li>

                            @if (Context.User.Identity.IsAuthenticated)
                            {
                             
                                <li><a href="/Dashboard/DashDisplay" class="@(ViewContext.RouteData.Values["Action"]?.ToString() == "DashDisplay" ? "active" : "")">Dashboard</a></li>
                                @if (User.IsInRole("admin"))
                                {
                                    <li><a href="/Admin/AdminDisplay" class="@(ViewContext.RouteData.Values["Action"]?.ToString() == "AdminDisplay" ? "active" : "")">Admin page</a></li>
                                  
                                }
                                <li><a href="/UserAuthentication/Logout" class="@(ViewContext.RouteData.Values["Action"]?.ToString() == "Logout" ? "active" : "")">Logout</a></li>

                            }
                            else
                            {
                                <li><a href="/UserAuthentication/Login" class="@(ViewContext.RouteData.Values["Action"]?.ToString() == "Login" ? "active" : "")">Login</a></li>
                            }
                        </ul>
                        <a class='menu-trigger'>
                            <span>Menu</span>
                        </a>
                        <!-- ***** Menu End ***** -->
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <!-- ***** Header Area End ***** -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
          
        </main>
    </div>
    <!-- FOOTER -->
    <footer class="w-100 py-4 flex-shrink-0">
        <div class="container py-4">
            <div class="row gy-4 gx-5">
                <div class="col-lg-4 col-md-6">
                    <h5 class="h1 text-white">EVA</h5>
                    <p>The spacewalk of your life!</p>
                    <p>&copy; Copyrights 2023 EVA. All rights reserved. </p>
                </div>
                <div class="col-lg-2 col-md-6">
                    <h5 class="text-white mb-3">Pages</h5>
                    <ul class="list-unstyled text-muted">
                        <li><a href="/">Home</a></li>
                        <li><a href="/apod">Apod</a></li>
                        <li><a href="/astronauts">Astronauts</a></li>
                        <li><a href="/galaxies">Galaxies</a></li>
                        <li><a href="/planets">Planets</a></li>
                    </ul>
                </div>
                <div class="col-lg-2 col-md-6">
                    <h5 class="text-white mb-3">Services</h5>
                    <ul class="list-unstyled text-muted">
                        <li><a href="/">Home</a></li>
                        <li><a href="/aboutus">About us</a></li>
                        <li><a href="/UserAuthentication/Login">LogIn/Signin</a></li>
                    </ul>
                </div>
                <div class="col-lg-4 col-md-6">
                    <h5 class="text-white mb-3">Discover</h5>
                    <p>At EVA, we are passionate about all things space-related, so our website features a wide range of content for all space-fans. So what are you waiting for? Come and explore the wonders of space with EVA!</p>
                </div>
            </div>
        </div>
    </footer>
    <!--====== FOOTER ENDS ======-->
    <!-- Scripts -->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="/assets/js/isotope.min.js"></script>
    <script src="/assets/js/owl-carousel.js"></script>
    <script src="/assets/js/tabs.js"></script>
    <script src="/assets/js/popup.js"></script>
    <script src="/assets/js/custom.js"></script>
</body>
</html>
