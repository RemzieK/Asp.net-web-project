                            <li><a href="/apod" class="@(ViewContext.RouteData.Values["Action"]?.ToString() == "Apod" ? "active" : "")">Apod</a></li>
                            <li><a href="/aboutus" class="@(ViewContext.RouteData.Values["Action"]?.ToString() == "Aboutus" ? "active" : "")">About us</a></li>
                            <li><a href="registration.html">LogIn/SignIn</a></li>
                            <li><a href="profile.html">Profile</a></li>
                        </ul>




                        <a class='menu-trigger'>
                            <span>Menu</span>
                        </a>
                        <!-- ***** Menu End ***** -->
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <!-- ***** Header Area End ***** -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    <footer class="w-100 py-4 flex-shrink-0">
        <div class="container py-4">
            <div class="row gy-4 gx-5">
                <div class="col-lg-4 col-md-6">
                    <h5 class="h1 text-white">EVA</h5>
                    <p>The spacewalk of your life!</p>
                    <p>&copy; Copyrights 2023 EVA. All rights reserved. </p>
                </div>
                <div class="col-lg-2 col-md-6">
                    <h5 class="text-white mb-3">Pages</h5>
                    <ul class="list-unstyled text-muted">
                        <li><a href="/index">Home</a></li>
                        <li><a href="/apod">Apod</a></li>
                        <li><a href="/astronauts">Astronauts</a></li>
                        <li><a href="/galaxies">Galaxies</a></li>
                        <li><a href="/planets">Planets</a></li>
                    </ul>
                </div>
                <div class="col-lg-2 col-md-6">
                    <h5 class="text-white mb-3">Services</h5>
                    <ul class="list-unstyled text-muted">
                        <li><a href="/index">Home</a></li>
                        <li><a href="/aboutus">About us</a></li>
                        <li><a href="/registration">LogIn/SignIn</a></li>

                    </ul>
                </div>
                <div class="col-lg-4 col-md-6">
                    <h5 class="text-white mb-3">Discover</h5>
